<% provide(:title, "New Project") %>

<h1>New Project</h1>

<div class="row" style="">
	<div class="col-md-6 col-md-offset-3 well">
		<%= bootstrap_form_for(@project)  do |f| %>
			<%#= render 'shared/error_messages' %>
			<%#= f.label :name %>
			<%= f.text_field :name %>

			<%#= f.label :email %>
			<%= f.text_field :code %>

			<%#= f.label :password %>
			<%= f.text_field :description %>

			<%#= f.label :password_confirmation, "Confirmation" %>
			<%= f.text_field :github_url %>

			<%= f.label :billing_type%><br>
			<%= f.radio_button :billing_type, 't&m', checked: true, label: "t&m" %> 
			<%= f.radio_button :billing_type, 'fixed', label: "fixed" %> 
			<br>
			<%= f.date_field :start, :order => [:day, :month, :year], label: "Start date" %>
			<%= f.date_field :deadline, :order => [:day, :month, :year], label: "Deadline date" %>
			<%= f.date_field :end, :order => [:day, :month, :year], label: "End date" %>

			<%= f.label :status %>
			<%= f.radio_button :status, 'poc', checked: true, label: "poc" %>
			<%= f.radio_button :status, 'kickoff', label: "kick-off" %>
			<%= f.radio_button :status, 'completed', label: "completed" %>

			<%= f.submit "Add Project", class: "btn btn-large btn-primary" %>
		<% end -%>
	</div>
</div>